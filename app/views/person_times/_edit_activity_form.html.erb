<script>
  $(document).ready(function() {
	
    $('#kairos_end_switch').sliderSwitch(1,
      function() {
        $('#end_shift').val(1);
      },
      function() {
        $('#end_shift').val(0);
      });

	$(document).ready(function() {
	//    jQuery('#regform_district_id').html("<option value=''>Select District</option>");
	  jQuery('#person_time_activity_id').change(function() {
        var data=$('#person_time_activity_id').val();
    
	    $.ajax({
	      type: "POST",
	      url: "http://"+location.host+"/dynamic_specific_tasks/"+data,
	      data: data,
	      beforeSend: function()
	      {
	
	       },
	       success: function(response)
	       {
	       }
	       });
	    });
	});
  });
</script>
<div id ="form_time_div">	
  <% if @activities.count != 0 && @unfinished_activity.nil? %>
    <div id ="inside-left">
	  <div style ="margin-top:-8px">
	    <label style="font-weight:bold">select people who will receive notification </label>
	  </div>	
      <div id='right'>
	    <%= form_tag submit_activities_person_times_url,:method => :put do %>
	      <%= check_box_tag("master",1,false,{ :id => "select_all", :onclick => "toggleItems(this,'people')" }) %><span style="font-weight:bold"> Select All</span><br/><br/>
			<% for person in @persons_can_approved %>
		    <div style='width:400px;margin-top:-10px'>
			<div class='involved_two'>&nbsp;<%= check_box_tag("people[]",person.id,false,{ :class => "people", :onclick => "toggleMaster(this,'select_all')" }) %>&nbsp;<span><%= person.name %></span></div></div>     
			<% end %><br/><br/><br/>
   		    <% for activity in @activities %>
		      <%= hidden_field_tag("activities[]",activity.id) %>
		    <% end %>
		  <div style='margin-top:10px'>	
		  <%= submit_tag "Submit Activities Today" ,:class => 'btn' %>&nbsp;&nbsp;&nbsp; 
			<% if !activity.is_submitted? && !activity.is_approved? %>
		        <span class="label label-warning">Not Submitted</span>
		      <% elsif activity.is_submitted? && activity.is_approved == nil %>
		        <span class="label label-success">Submitted</span>
		      <% elsif activity.is_approved? %>
		        <span class="label label-info">Approved</span>
		    <% end %>		
		  </div>	
	    <% end %>	
	  </div>
	 </div>
	<%= render :partial => "time_summaries"%>
  <% elsif @activities.count != 0 && !@unfinished_activity.nil? %>  	
    <div id ="inside-left">
	  <%= form_for(@activities.first,:remote => true) do |f| %>     
        <fieldset>
	       <div style ='margin-left:-40px'> 
	         <div id="label_text_holder">
			   <div style='margin-left:10px;margin-bottom:5px;'>
		         <em>end current activity</em>
			   </div>
			
	           <div id ="left"><%= hidden_field_tag(:from,'not from edit')%><%= f.label :start_time, "Start Time" %></div>
	           <div id="right_with_bg"><%= f.label :start_time, @unfinished_activity.start_time.strftime('%l:%M:%S %p') %></div>
	           <div id="left"><%= f.label :activity_id, "Activity" %></div>
               <div id="right"><%= f.select('activity_id', options_for_select(["Select Activity"]) +	options_from_collection_for_select(options_for_activity(current_user.department_id), :id, :name), :id => "act_id") %></div>
			   <div style="margin-top:-100px">
	           <div id="left"><%= f.label :specific_activity_id, "Specific Activity" %></div> 
	           <div id="right"><%= f.select("specific_activity_id","", :include_blank => true) %> </div></div></div><br/>
			   <div style="margin-left:40px;margin-bottom:-10px;float:left;margin-top:2px">
				<%= f.submit :end, :value => "end activity", :class => 'btn' %><div style='margin-top:-28px;margin-left:230px'><%= kairos_end_switch %></div><div style='margin-top:-23px;margin-left:110px'><span class="label label-info">CONTINUE SHIFT?</span></div>
			  </div>	
	   <% end %>
	 </div></div>
	 <%= render :partial => "time_summaries" %>
	<% else %>
		<div id ="inside-left">
		  <div id = "right">
		    <%= label :message, "No Results found" %>
		  </div>	
		</div>	
	<% end %>		
</div></div>