       <p><%= "this will end and create new blank task"  %></p>
     	
	   <div class='widget'>	
	     <%= form_for(@activities.first,:remote => true ) do |f| %>     
          	 <ul>	
             <%= label_tag :Continue,"End Shift" %>  
             <%= kairos_end_switch %>
		 	 </ul>
			 <ul>	
      		  <%= hidden_field_tag(:from,'not from edit')%>
 			 </ul>	
	         <ul>
	         <%= f.label :start_time, "Starting Time" %>
