
	<div class='people_left'>
	<fieldset> 	
    <div class='control-group'>
       <%= f.label :first_name, :class => 'control-label' %>
       <div class= "controls">	
        <%= f.text_field :first_name,:class => 'text_field' %>
	   </div>
	</div>
	
	 <div class='control-group'>
       <%= f.label :last_name, :class => 'control-label' %>
       <div class ="controls">	
         <%= f.text_field :last_name,:class => 'text_field' %>
	   </div>
	</div>
	
	 <br/><br/>
	 
	<div class='control-group'>
       <%= f.label :email_address, :class => 'control-label' %>
       <div class ="controls">	
         <%= f.text_field :email_address,:class => 'text_field' %>
	   </div>
	</div>
	
    <div class='control-group'>
       <%= f.label :username, :class => 'control-label' %>
       <div class = "controls">	
       <%= f.text_field :username,:class => 'text_field' %>
	   </div>
	</div>
	
	<div class='control-group'>
       <%= f.label :password, :class => 'control-label' %>
       <div class ="controls">
	   <% if !@person.password.nil? %>
       <%= f.password_field :password,:value => @person.password,:class => 'text_field' %>
	   <% else %>
	     <%= f.password_field :password,:class => 'text_field' %>
	   <% end %>	
	   </div>
	</div>
	<br/>
	<font style='font-weight:bold'>User Time Settings</font><br/>
	   <span><em>This will set the users start time and end of shift time</em></span><br/>
	   <span><em>It should be in military time</em></span><br/><br/><br/>
	   	    <div class='control-group'>
		       <%= f.label :start_time, :class => 'control-label' %>
		       <div class= "controls">	
		     <% if !@person.start_time.nil? %> 
		       <%= f.text_field :start_time, :value => @person.start_time.strftime("%H:%M:%S"), :class => 'text_field' %><p>
			 <% else %>
			   <%= f.text_field :start_time, :value => "00:00:00", :class => 'text_field' %><p>
			 <% end %>
		   </div>
		  </div>

		 	<div class='control-group'>
		       <%= f.label :end_time, :class => 'control-label' %>
		       <div class= "controls">	
		     <% if !@person.start_time.nil? %> 
		       <%= f.text_field :end_time, :value => @person.end_time.strftime("%H:%M:%S"), :class => 'text_field' %><p>
			 <% else %>
			   <%= f.text_field :end_time, :value => "00:00:00", :class => 'text_field' %><p>
			 <% end %>
		   </div>
	
   <br/><br/>
   </fieldset>
   </div>	
   <div class='people_right'>
   <fieldset>	
   <% if current_user.is_supervisor? || current_user.is_admin? %>

   <div class='control-group'>
      <%= f.label :role_id, :class => 'control-label' %>
      <div class ="controls">	
	    <%= f.select(:role_id, Role.all.collect{|r| [r.name, r.id] }, :class => 'text_field') %>
      </div> 
   </div>
   
   <div class='control-group'>
      <%= f.label :organization_id, "Organization" ,:class => 'control-label' %>
      <div class ="controls">	
	    <%= f.select(:organization_id, Organization.all.collect{|o| [o.name, o.id] }, :class => 'text_field') %>
      </div> 
   </div>   

   <div class='control-group'>
      <%= f.label :department, :class => 'control-label' %>
      <div class ="controls">	
	   <%= f.select(:department_id, Department.all.collect{|d| [d.name, d.id] }, :class => 'text_field') %>
      </div>
   </div>

   <div class='control-group'>
     <%= f.label :remaining_sick_leave, :class => 'control-label' %>
     <div class ="controls">	
	   <%= f.text_field :remaining_sick_leave,:class => 'text_field' %>
     </div>
   </div>

   <div class='control-group'>
      <%= f.label :remaining_vacation_leave, :class => 'control-label' %>
      <div class ="controls">	
        <%= f.text_field :remaining_vacation_leave,:class => 'text_field' %>
      </div>
   </div>

    <br/>  

   <span><em><label style="font-weight:bold;margin-left:60px">Check if user can approve tasks or leaves submitted by the user, You don't have to check this if the user is an admin.'</label></em></span><br/>
   <div class='control-group'>
      <%= f.label :can_approve, "Can approve", :class => 'control-label' %>
      <div class ="controls">	
	    <%= f.check_box(:can_approve, :class => 'text_field') %>
      </div> 
   </div>
   
   <span><em><label style="font-weight:bold;margin-left:60px">Check if user can receive emails like leaves, etc.</label></em></span><br/>
   <div class='control-group'>
      <%= f.label :can_receive_mails, "Emails", :class => 'control-label' %>
      <div class ="controls">	
	    <%= f.check_box(:can_receive_mails, :class => 'text_field') %>
      </div> 
   </div>

   <span><em><label style="font-weight:bold;margin-left:60px">Check if user can see notifications in the system</label></em></span><br/>
   <div class='control-group'>
      <%= f.label :system_notifications, "System Notifications", :class => 'control-label' %>
      <div class ="controls">	
	    <%= f.check_box(:system_notifications, :class => 'text_field') %>
      </div> 
   </div>

   <% end %>	
   </fieldset>
   </div>	
	
   <br/><br/>	


<br/<br/>
<div style="margin-left:700px;margin-bottom:20px">	
   <%= f.submit "Save my Changes",:class => "btn btn-primary" %>   
</div>	

</fieldset> 
</div> 
</div> 