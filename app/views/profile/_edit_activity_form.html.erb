<script>
  $(document).ready(function() {
	
    $('#kairos_end_switch').sliderSwitch(1,
      function() {
        $('#end_shift').val(1);
      },
      function() {
        $('#end_shift').val(0);
      });
  });
</script>
<div id ="form_time_div">	
  <% if @activities.count != 0 && @unfinished_activity.nil? %>
    <div id ="inside-left">
	  <div style ="margin-top:-8px">
	    <label style="font-weight:bold">select people who will receive notification </label>
	  </div>	
      <div id='right'>
	    <%= form_tag submit_activities_person_times_url,:method => :put do %>
	      <%= check_box_tag("master",1,false,{ :id => "select_all", :onclick => "toggleItems(this,'people')" }) %><span style="font-weight:bold"> Select All</span><br/><br/>
			<% for person in @persons_can_approved %>
		    <div style='width:400px;margin-top:-10px'>
			<div class='involved_two'>&nbsp;<%= check_box_tag("people[]",person.id,false,{ :class => "people", :onclick => "toggleMaster(this,'select_all')" }) %>&nbsp;<span><%= person.name %></span></div></div>     
			<% end %><br/><br/><br/>
   		    <% for activity in @activities %>
		      <%= hidden_field_tag("activities[]",activity.id) %>
		    <% end %>
		  <div style='margin-top:10px'>	
		  <%= submit_tag "Submit Activities Today" ,:class => 'btn' %>&nbsp;&nbsp;&nbsp; 
			<% if !activity.is_submitted? && !activity.is_approved? %>
		        <span class="label label-warning">Not Submitted</span>
		      <% elsif activity.is_submitted? && activity.is_approved == nil %>
		        <span class="label label-success">Submitted</span>
		      <% elsif activity.is_approved? %>
		        <span class="label label-info">Approved</span>
		      <% end %>		
		  </div>	
	    <% end %>	
	  </div>
	 </div>
	<%= render :partial => "time_summaries"%>
  <% elsif @activities.count != 0 && !@unfinished_activity.nil? %>  	
    <div id ="inside-left">
	  <%= form_tag update_activity_person_times_url,:class => 'form-horizontal',:method => :put do %>     
        <fieldset>
	       <div style ='margin-left:-40px'> 
	         <div id="label_text_holder">
			   <div style='margin-left:10px;margin-bottom:5px;'>
		         <em>end current activity</em>
			   </div>
	           <div id ="left"><%= label :start_time, "Start Time" %></div>
	           <div id="right_with_bg"><%= label :start_time, @unfinished_activity.start_time.strftime('%l:%M:%S %p') %></div>
	           <div id="left"><%= label :activity_id, "Activity" %></div>
               <div id="right"><%= select_tag('activity_id', options_for_select(["Select Activity"]) +	options_from_collection_for_select(options_for_activity(current_user.department_id), :id, :name), :id => "act_id") %></div>
			   <div id="sample">
	           <div id="left"><%= label :specific_activity_id, "Specific Activity" %></div> 
	           <div id="right"><%= select_tag("specific_activity_id",:id => "specific_activity_id", :include_blank => true) %> <%= hidden_field_tag(:person_time_id, @unfinished_activity.id) %></div></div></div><br/>
			   <div style="margin-left:40px;margin-bottom:-10px;float:left;margin-top:3px">
				<%= submit_tag "end activity", :class => 'btn' %><div style='margin-top:-28px;margin-left:230px'><%= kairos_end_switch %></div><div style='margin-top:-23px;margin-left:110px'><span class="label label-info">CONTINUE SHIFT?</span></div>
			  </div>	
	   <% end %>
	 </div></div>
	 <%= render :partial => "time_summaries" %>
	<% else %>
		<div id ="inside-left">
		  <div id = "right">
		    <%= label :message, "No Results found" %>
		  </div>	
		</div>	
	<% end %>		
</div></div>