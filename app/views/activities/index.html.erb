<div class='container'>    
  <div class='row'>
	  <div class='span13'>
	
    <h4>List of Activities</h4>	
	  <div style='margin-left: 10px;margin-top: 20px;margin-bottom:20px;float:left'>
	    <span class="label label-inverse">na</span> - not active &nbsp;&nbsp;	
	    <span class="label label-success">a</span> - active &nbsp;&nbsp;
	  </div>	
	  <div style='margin-left: 800px;margin-top: 20px;margin-bottom:20px'>
	    <%= link_to 'Add New Activity',new_activity_path, :class => 'btn btn-primary' %>
	  </div>
    <div id="special-gifts" class="report">
      <table>
        <tr>
	      <th></th>
          <th>Activity Name</th>
		  <th>Description</th>
          <th>Department</th>
          <th></th>        
        </tr>
		<% for activity in @activities %>
		  <tr class="<%= cycle('odd','even') %>">
		    <td>
			  <% if activity.is_active == true %>
			    <span class="label label-success">a</span>
			  <% else %>
			    <span class="label label-inverse">na</span>
			  <% end %> 
			</td>
		    <td><%= activity.name %></td>
		    <td><%= activity.description %></td>
		    <td>
			  <% if !activity.department.nil? %>
		        <%= activity.department.name %>
		      <% else %>
		        <%= "All Department" %>
		      <% end %>
		    </td> 
		    <td>
			  <div class='handle'>
			   
			   <%=link_to image_tag('trash.gif',:class => 'trash'), deactivate_activity_url(activity), :confirm => 'Are you sure you want to deactivate this activity?' if activity.is_active == true %>
			   <%= link_to 'edit', edit_activity_url(activity), :class => "edit" %>
			   <%= link_to 'activate', activate_activity_url(activity), :confirm => 'Are you sure you want to activate this activity?' if activity.is_active == false %>
			   
			 </div>	
		 	</td>
		  </tr>
		<% end %>
	  </table>		
      </div>

  </div>
</div>
</div>